@using ShipBase.Domain.SectionOne.Entity
@model List<ShipBase.Domain.SectionOne.Entity.PurchasingData>

@{
    Layout = "_Layout";
    ViewBag.Title = "Пользователи";
}

<div class="card col-md-12" style="margin: 10px;">
    <div class="card-buttons-group">
        @if (User.IsInRole("Admin"))
        {
            <button class='btn btn-success' id='addPurchId'>Добавить</button>
        }
    </div>
</div>




<div class="card col-lg-12">
    <table class="class=" table table-striped table-bordered"">
        <thead class="table-light">
            <tr>
                <th scope="col">номер закупки</th>
                <th scope="col">этап закупки</th>
                <th scope="col">количество заявок</th>
                <th scope="col">cпособ осуществления закупки</th>
                <th scope="col">датa начала осуществления закупки</th>
                <th scope="col">датa оканчания осуществления закупки</th>
                <th scope="col">Н(М)ЦК</th>
                <th scope="col">номер Федерального закона</th>
                <th scope="col">количество кораблей</th>
                <th scope="col">название объекта</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var purch in Model)
            {
                <tr>
                    <td>@purch.Id</td>
                    <td>@purch.Purchase_stage</td>
                    <td>@purch.Num_Of_Applications</td>
                    <td>@purch.Method_of_purchasing</td>
                    <td>@purch.Start_data</td>
                    <td>@purch.End_data</td>
                    <td>@purch.NMCK</td>
                    <td>@purch.Federal_law</td>
                    <td>@purch.Num_of_ships</td>
                    <td>@purch.Purchase_object</td>
                    
                    <td>
                        <form asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@purch.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                    <td>
                        @*<button type="submit" class="btn btn-sm btn-primary" onclick="openModal({ url: '@Url.Action("Update", "User")', data: @user.Id })">
                    Посмотреть
                    </button>*@
                        @* <button class='btn btn-sm btn-primary' id='UpdateUserId'>Обновить</button>*@
                        <button class="btn btn-primary" onclick="openModal({ url: '/Purchase/GetPurchasingData', data: '@purch.Id' })"
                            data-toggle="ajax-modal" data-target="Modal">
                            Открыть
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section pageScripts {

    <script src="~/js/modal.js"></script>
    <script>
        let modal = $('#modalWhButtons');

        $('#addPurchase').on('click', function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Save"),
                              success: function (response) {
                    $('.modal-dialog').removeClass("modal-lg");
                    modal.find(".modal-body").html(response);
                    modal.modal('show')
                },
                failure: function () {
                    modal.modal('hide')
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });

    </script>
}